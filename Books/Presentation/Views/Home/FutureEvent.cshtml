@model IEnumerable<Shared.EventObject>

@{
    ViewBag.Title = "FutureEvent";
}

<h2>Future Events</h2>

<p>
    @if (User.Identity.IsAuthenticated)
    {
        @Html.ActionLink("Create New", "CreateEvent", new { @class = "nav nav-pills" })
        @Html.ActionLink("Back to List", "LoggedIn", new { @class = "nav nav-pills" })
    }
    else
    {
        @Html.ActionLink("Create New", "Login", "Account")
        @Html.ActionLink("Back to List", "Login", "Account")
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="font-weight : bold">
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            | @Html.ActionLink("Details", "EventDetails", new { id = item.Id }) |
        </td>
    </tr>
}

</table>
